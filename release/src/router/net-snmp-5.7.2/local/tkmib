$tmp = $OptMenuBut->cget(-menu);
$OptMenuWidgets = $tmp->entrycget("Display", -menu);
$OptMenuWidgets = $OptMenuWidgets->entrycget("MIB Information", -menu);

$hlist=$top->Scrolled(qw(HList -itemtype imagetext -browsecmd main::showInfo
