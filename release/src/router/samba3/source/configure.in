                [samba_cv_HAVE_LIBFAM=no])
            unset samba_fam_xtra
        fi
    fi

    if test x"$samba_cv_HAVE_LIBFAM" = x"yes" ; then
        default_shared_modules="$default_shared_modules vfs_notify_fam"
