. "${srcdir=.}/init.sh"; path_prepend_ ../src
print_ver_ rm
skip_if_root_

mkdir -p a/b || framework_failure_
chmod u-r a


# This should fail.
rm -rf a > out 2>&1 && fail=1
cat <<\EOF > exp
rm: cannot remove `a': Permission denied
EOF

compare out exp || fail=1

Exit $fail
