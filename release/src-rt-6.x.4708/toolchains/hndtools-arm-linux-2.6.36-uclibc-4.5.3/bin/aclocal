#!/usr/bin/perl -w
# -*- perl -*-
# Generated from aclocal.in; do not edit by hand.

eval 'case $# in 0) exec /usr/bin/perl -S "$0";; *) exec /usr/bin/perl -S "$0" "$@";; esac'
    if 0;

